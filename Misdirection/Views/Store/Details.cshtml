@model Misdirection.Models.Album

@{
    ViewBag.Title = "Details";
}

@*<img src="@Url.Content(@Model.AlbumArtUrl)" class="listing_large" />*@
<div class="row">
    <div class="large-6 columns">
        <img src="http://placehold.it/600x340&text=Photo Pending" class="listing_large" />
    </div>
    <div class="large-6 columns">
        <div class="card">
            <div class="content">
                <span class="title">@Model.Title</span>
                <p>(as seen in @Model.Artist.Name)</p>
                <p class="text-right">$@Model.Price</p>
            </div>
        </div>
        <div id="example">HERE</div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.2/react.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.2/react-dom.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/0.3.2/marked.min.js"></script>
        <script src="@Url.Content("~/Scripts/Comments.jsx")"></script>
    </div>
</div>